{
  "name": "tcyp-coin",
  "version": "1.0.0",
  "description": "TCYP Coin corporate currency system",
  "scripts": {
    "install": "cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && node server.js",
    "postinstall": "cd backend && npm run reset-db",
    "update-employees": "cd backend && node manual-update.js --force",
    "clear-positions": "cd backend && node clear-positions.js"
  },
  "engines": {
    "node": "18.x"
  }
}